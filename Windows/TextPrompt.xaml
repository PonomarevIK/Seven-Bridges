<Window x:Class="Seven_Bridges.TextPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Text Prompt" Width="200" SizeToContent="Height" WindowStartupLocation="CenterOwner">
    
    <StackPanel Orientation="Vertical" KeyDown="StackPanel_KeyDown">
        <TextBlock x:Name="Prompt" Text="Placeholder" Margin="5"/>
        <TextBox x:Name="Response" MaxLength="3" Margin="5,0,5,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Click="OKButton" Margin="5" Width="60"/>
            <Button Content="Cancel" Click="CancelButton" Margin="5" Width="60"/>
        </StackPanel>
    </StackPanel>
    
</Window>
